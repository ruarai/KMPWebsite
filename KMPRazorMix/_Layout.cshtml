@using KMPRazorMix
<!DOCTYPE html>
<html>
<head>
    <link href='http://fonts.googleapis.com/css?family=Lato:300' rel='stylesheet' type='text/css' />
    <link href="/content/style.min.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/content/favicon.ico">
    <title>@Page.Title</title>
    @RenderSection("head", required: false)
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-46896943-1', 'apphb.com');
        ga('send', 'pageview');
    </script>
</head>
<body>
    <section id="centralColumn">
        <header id="header">
            <h1>
                <a href="/">Kerbal MP</a>
            </h1>
            <h2>
                <a href="/Downloads">Download</a>
            </h2>
            <h2>
                <a href="/Servers">Servers</a>
            </h2>
            <h2>
                <a href="/FAQ">FAQ</a>
            </h2>
            <h2>
                <a href="http://www.github.com/TehGimp/KerbalMultiPlayer">Source <img src="/content/github.png" width="24" height="24"/></a>
            </h2>
        </header>

        <section id="content">
            @RenderBody()
        </section>

        <footer id="footer">
            Page generated at @DateTime.Now.ToString("hh:mm tt"), KMP information last updated at @KMP.LastUpdate.ToString("hh:mm tt")@{Write(KMP.CurrentlyUpdating ? ", Information is currently updating." : "."); } <br/>
            @KMP.DebugString
        </footer>
    </section>
</body>
</html>
